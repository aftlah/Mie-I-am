// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  cashier
}

enum OrderStatus {
  pending_payment
  paid
  processing
  completed
}

enum ItemStatus {
  queued
  cooking
  done
}

enum PaymentStatus {
  pending
  success
  failed
  expired
}

enum PaymentMethod {
  QRIS
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]

  @@map("categories")
}

model Product {
  id                    Int     @id @default(autoincrement())
  categoryId            Int
  name                  String
  price                 Decimal
  base_duration_seconds Int
  complexity_score      Int
  is_quick_job          Boolean
  is_available          Boolean

  category   Category    @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]

  @@index([name])
  @@map("products")
}

model Table {
  id             Int     @id @default(autoincrement())
  table_number   String  @unique
  qr_code_string String
  is_occupied    Boolean

  orders Order[]

  @@map("tables")
}

model Order {
  id                        Int         @id @default(autoincrement())
  tableId                   Int
  customer_name             String
  queue_number              String
  total_amount              Decimal
  tax_amount                Decimal
  order_time                DateTime
  estimated_completion_time DateTime?
  status                    OrderStatus

  table        Table         @relation(fields: [tableId], references: [id])
  items        OrderItem[]
  transactions Transaction[]

  @@map("orders")
}

model OrderItem {
  id                  Int        @id @default(autoincrement())
  orderId             Int
  productId           Int
  quantity            Int
  notes               String?
  price_at_time       Decimal
  item_status         ItemStatus
  started_cooking_at  DateTime?
  finished_cooking_at DateTime?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model Transaction {
  id             Int           @id @default(autoincrement())
  orderId        Int
  payment_method PaymentMethod
  payment_status PaymentStatus
  external_id    String
  paid_at        DateTime?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

// Optional: Staff users table separate from NextAuth User
model StaffUser {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password_hash String
  role          UserRole
  created_at    DateTime @default(now())

  @@map("users")
}
